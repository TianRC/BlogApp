<?xml version="1.0" encoding="utf-8"?><!-- 矩形圆角+左右两边为一个圆弧 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:useLevel="true">

    <size
        android:width="60dp"
        android:height="40dp" />

    <solid android:color="#8000ff00" />

    <!-- 圆角半径是高度的一般就是一个圆弧了 -->
    <corners android:radius="10dp" />
    <!-- 调整angle实现水平渐变，垂直渐变或者对角渐变 -->
    <gradient
        android:angle="135"
        android:centerX="0.5"
        android:centerY="0.4"
        android:endColor="#cc208e"
        android:startColor="#6713d2"
        android:type="linear" />
</shape>